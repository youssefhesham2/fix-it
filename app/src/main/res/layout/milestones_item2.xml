<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    android:elevation="12dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_milestones_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 150.00 USD"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000"
            android:textStyle="bold" />
        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="#000"
            android:visibility="gone"
            android:layout_marginHorizontal="5dp"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_milestones_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="init Milestone"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    <TextView
        android:id="@+id/tv_milestones_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/btn_request_milestone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_app_colo"
        android:text="Request Release"
        android:textColor="@color/app_color"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <Button
        android:id="@+id/send_milestone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/stroke_app_colo"
        android:text="Send Release"
        android:textColor="@color/app_color"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    <Button
        android:id="@+id/add_milestone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid_my_color"
        android:text="Add Milestone"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
</LinearLayout>
</androidx.cardview.widget.CardView>